{
    "pluginAlias": "LoxonePlatform",
    "Name": "Homebridge-Loxone-Proxy",
    "pluginType": "platform",
    "singular": true,
    "schema": {
        "type": "object",
        "properties": {
            "host": {
                "type": "string",
                "required": true,
                "description": "Loxone miniserver ip"
            },
            "port": {
                "type": "integer",
                "default": "80",
                "required": true,
                "description": "miniserver port"
            },
            "username": {
                "type": "string",
                "required": true,
                "description": "Loxone username"
            },
            "password": {
                "type": "string",
                "required": true,
                "description": "Loxone password"
            },
            "options": {
                "type": "object",
                "title": "Options",
                "properties": {
                    "MoodSwitches": {
                        "type": "integer",
                        "default": "1",
                        "enum": ["0","1"],
                        "description": "Include Lighting Controller Moods as Switches."
                    }
                }
            },
            "switchAlias": {
                "type": "object",
                "title": "Switch aliases",
                "description": "Change the prefixes being used for the assumptions",
                "properties": {
                    "Lock": {
                        "type": "string"
                    }
                }
            },
            "InfoOnlyDigitalAlias": {
                "type": "object",
                "title": "InfoOnlyDigital aliases",
                "description": "Change the prefixes being used for the assumptions",
                "properties": {
                    "Motion": {
                        "type": "string"
                    }
                }
            },
            "InfoOnlyAnalogAlias": {
                "type": "object",
                "title": "InfoOnlyAnalog aliases",
                "description": "Change the prefixes being used for the assumptions",
                "properties": {
                    "Humidity": {
                        "type": "string"
                    },
                    "Brightness": {
                        "type": "string"
                    }
                }
            }
        }
    }
}